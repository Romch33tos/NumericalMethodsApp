<Window x:Class="NumericalMethodsApp.OlympiadSorting.OlympiadSortingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalMethodsApp.OlympiadSorting"
        xmlns:oxy="http://oxyplot.org/wpf" 
        mc:Ignorable="d"
        Title="Олимпиадные сортировки" Height="694" Width="1100"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="White"
        x:Name="ThisWindow"
        WindowState="Normal"
        SizeToContent="Manual">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center" 
                                             Margin="10,6"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF21618C"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <Setter Property="Foreground" Value="#FF888888"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFD0D7DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="10,3"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="EditableDataGridStyle" TargetType="DataGrid">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="False"/>
        </Style>

        <Style x:Key="ReadOnlyDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource EditableDataGridStyle}">
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="0,0,0,29">
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Справка" Click="Help_Click"/>
        </Menu>

        <Border Background="White" Margin="12" CornerRadius="8" 
                BorderThickness="1" BorderBrush="#FFEAECEE" Height="647">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Массивы" Margin="6,-11,6,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid x:Name="OriginalDataGrid" Grid.Column="0" Margin="6,0,3,0" SelectionChanged="DataGrid_SelectionChanged"
                                 CellEditEnding="OriginalDataGrid_CellEditEnding"
                                 CanUserAddRows="False" CanUserDeleteRows="False" Grid.RowSpan="2"
                                 Style="{StaticResource EditableDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Индекс" Binding="{Binding Index}" IsReadOnly="True" Width="60"/>
                                <DataGridTextColumn Header="Значение" Binding="{Binding Value}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid x:Name="SortedDataGrid" Grid.Row="1" Grid.Column="1" Margin="3,0,6,0"
                                 Style="{StaticResource ReadOnlyDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Индекс" Binding="{Binding Index}" IsReadOnly="True" Width="60"/>
                                <DataGridTextColumn Header="Значение" Binding="{Binding Value}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="Сравнение алгоритмов сортировки" Margin="6,5,6,199" Grid.RowSpan="2">
                    <Border BorderThickness="1" BorderBrush="#FFEAECEE" 
                           Background="#FFF8F9FA" CornerRadius="6">
                        <oxy:PlotView x:Name="PerformanceChart" Background="Transparent" Margin="4,0,4,0" Height="109"/>
                    </Border>
                </GroupBox>

                <GroupBox Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Header="Результаты выполнения" Margin="6,-11,6,0">
                    <DataGrid x:Name="ResultsDataGrid" Height="242" Margin="6,0,6,0" SelectionChanged="ResultsDataGrid_SelectionChanged"
                             Style="{StaticResource ReadOnlyDataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Алгоритм" Width="*" Binding="{Binding AlgorithmName}"/>
                            <DataGridTextColumn Header="Время (мс)" Width="80" Binding="{Binding TimeMs}"/>
                            <DataGridTextColumn Header="Итерации" Width="70" Binding="{Binding Iterations}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="0" Header="Генерация данных" Margin="6,22,6,23">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Размерность:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="RowsTextBox" Grid.Row="0" Grid.Column="1" Text="5" 
                                ToolTip="Количество строк" Width="68" HorizontalAlignment="Center" Margin="0,3,0,0" VerticalAlignment="Top"/>

                        <Label Content="Диапазон:" Grid.Row="1" Grid.Column="0"/>
                        <TextBox x:Name="MinValueTextBox" Grid.Row="1" Grid.Column="1" Text="0" 
                                ToolTip="Минимальное значение" Width="67" HorizontalAlignment="Center"/>
                        <Label Content="—" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Width="21"/>
                        <TextBox x:Name="MaxValueTextBox" Grid.Row="1" Grid.Column="3" Text="100" 
                                ToolTip="Максимальное значение" Width="67" HorizontalAlignment="Center"/>

                        <Button Content="Применить размер" Grid.Row="2" Grid.ColumnSpan="4" 
                               Click="ApplySize_Click" Margin="97,18,0,-9" Height="28" FontSize="11" 
                               Background="#FF3498DB" HorizontalAlignment="Left" Width="153"/>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="1" Header="Импорт данных" Margin="6,22,111,23">
                    <StackPanel Orientation="Vertical">
                        <Button Content="Случайная генерация" Click="RandomGenerate_Click" 
                               Margin="3" Background="#FF27AE60"/>
                        <Button Content="Импорт из CSV" Click="ImportCsv_Click" 
                               Margin="3"/>
                        <Button Content="Импорт из Google Таблиц" Click="ImportGoogle_Click" 
                               Margin="3"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="1" Header="Алгоритмы сортировки" Margin="269,22,222,23" Grid.ColumnSpan="2">
                    <StackPanel Margin="6">
                        <CheckBox x:Name="BubbleSortCheckBox" Content="Пузырьковая" Checked="CheckBox_Checked"/>
                        <CheckBox x:Name="InsertionSortCheckBox" Content="Вставками" Checked="CheckBox_Checked"/>
                        <CheckBox x:Name="ShakerSortCheckBox" Content="Шейкерная" Checked="CheckBox_Checked"/>
                        <CheckBox x:Name="QuickSortCheckBox" Content="Быстрая" Checked="CheckBox_Checked"/>
                        <CheckBox x:Name="BogosortCheckBox" Content="Болотная" Checked="CheckBox_Checked"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="2" Header="Направление сортировки" Margin="88,22,6,55">
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="AscendingRadioButton" Content="По возрастанию" IsChecked="True"/>
                        <RadioButton x:Name="DescendingRadioButton" Content="По убыванию"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Header="Настройки сортировки" Margin="6,189,6,52" Grid.RowSpan="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Label Content="Ограничение итераций:" VerticalAlignment="Center"/>
                            <TextBox x:Name="MaxIterationsTextBox" Width="70" Text="1000" 
                                    ToolTip="Максимальное количество итераций" Margin="6,3,12,3"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" 
                                   Orientation="Horizontal" HorizontalAlignment="Left" Margin="114,5,0,-4">
                            <Button x:Name="ClearAll" Content="Очистить все" Click="ClearAll_Click" 
                                   Width="135" Background="#FFE74C3C" FontSize="12" Height="32"/>
                            <Button x:Name="StartSorting" Content="Начать" 
                                   Click="StartSorting_Click" Width="135" Background="#FFE67E22"
                                   Height="32" Margin="12,3,0,3"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="0,12,0,0"/>
            </Grid>
        </Border>
    </DockPanel>
</Window>
