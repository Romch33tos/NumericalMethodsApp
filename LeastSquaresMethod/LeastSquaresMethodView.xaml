<Window x:Class="NumericalMethodsApp.LeastSquaresMethod.LeastSquaresMethodView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalMethodsApp.LeastSquaresMethod"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Метод наименьших квадратов" 
        Height="720" 
        Width="1080"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="6,3"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                    Background="{TemplateBinding Background}"
                    CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Margin="10,6"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF21618C"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <Setter Property="Foreground" Value="#FF888888"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFD0D7DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Справка" Click="Help_Click"/>
        </Menu>

        <Border Background="White" Margin="12" CornerRadius="8" 
            BorderThickness="1" BorderBrush="#FFEAECEE">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0" Grid.Column="0" Header="График" Margin="6,6,6,12">
                    <Border BorderThickness="1" BorderBrush="#FFEAECEE" 
                 Background="#FFF8F9FA" CornerRadius="6" Height="322">
                        <oxy:PlotView x:Name="DataPlot" Background="Transparent" Margin="4"/>
                    </Border>
                </GroupBox>

                <GroupBox Grid.Row="2" Header="Результат" Margin="698,11,44,256" Grid.ColumnSpan="2">
                    <TextBox x:Name="ResultTextBox" Style="{StaticResource ResultTextBoxStyle}" 
                  Height="322" TextWrapping="Wrap"/>
                </GroupBox>

                <GroupBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Header="Множество точек" Margin="6,6,6,12">
                    <DataGrid x:Name="PointsDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" 
                   Height="180" Margin="6" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="X" Width="*"/>
                            <DataGridTextColumn Header="Y" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Grid.Row="2" Grid.Column="0" Header="Параметры аппроксимации" Margin="6,6,365,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Размерность (n):" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="DimensionTextBox" Grid.Row="0" Grid.Column="1" 
                    Text="3" ToolTip="Степень полинома"/>

                        <Label Content="Точность (ε):" Grid.Row="1" Grid.Column="0" Margin="0,12,0,0"/>
                        <TextBox x:Name="PrecisionTextBox" Grid.Row="1" Grid.Column="1" 
                    Text="0.001" Margin="0,12,0,0" ToolTip="Точность вычислений"/>

                        <Label Content="Диапазон значений:" Grid.Row="2" Grid.Column="0" Margin="0,12,0,0"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" 
                       Orientation="Horizontal" Margin="0,12,0,0">
                            <TextBox x:Name="MinValueTextBox" Width="80" Text="0" 
                      ToolTip="Минимальное значение"/>
                            <Label Content="—" Margin="6,0"/>
                            <TextBox x:Name="MaxValueTextBox" Width="80" Text="100" 
                      ToolTip="Максимальное значение"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2" Header="Импорт данных" Margin="385,11,57,7">
                    <StackPanel Orientation="Vertical">
                        <Button Content="Случайная генерация" Click="RandomGenerate_Click" 
                   Margin="3" Background="#FF27AE60"/>
                        <Button Content="Импорт из CSV" Click="ImportCsv_Click" 
                   Margin="3"/>
                        <Button Content="Импорт из Google Таблиц" Click="ImportGoogle_Click" 
                   Margin="3"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Header="Управление" Margin="6,6,6,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ClearAllButton" Content="Очистить все" 
                   Click="ClearAll_Click" Width="135" Background="#FFE74C3C"/>
                        <Button x:Name="ApplyButton" Content="Применить" 
                   Click="Apply_Click" Width="135" Margin="12,0,12,0"/>
                        <Button x:Name="StartButton" Content="Начать вычисления" 
                   Click="StartCalculation_Click" Width="150" Background="#FFE67E22"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Border>
    </DockPanel>
</Window>
