<Window x:Class="NumericalMethodsApp.LeastSquaresMethod.LeastSquaresMethodView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalMethodsApp.LeastSquaresMethod"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="LeastSquaresMethodView" Height="680" Width="980"
        Background="White">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center" 
                                             Margin="10,6"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF21618C"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <Setter Property="Foreground" Value="#FF888888"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFD0D7DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Справка" Click="Help_Click"/>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="2" Margin="20,20,20,0" 
                   Grid.Row="0" VerticalAlignment="Top" Height="260"
                   Background="#FFF8F9FA" CornerRadius="6">
                <oxy:PlotView x:Name="MainPlot" Background="Transparent"/>
            </Border>

            <GroupBox Grid.Row="1" Header="Множество точек" Margin="20,10,0,10" 
                     Grid.Column="0" HorizontalAlignment="Left" Width="340">
                <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="6" Height="142"/>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Размерность" 
                     Margin="20,10,0,10" Grid.Column="1" HorizontalAlignment="Left" Width="200">
                <StackPanel Margin="6">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Значение n:" Width="86"/>
                        <TextBox x:Name="DimensionTextBox" Width="75"/>
                    </StackPanel>
                    <Button Content="Применить" Click="Button_Click_3" Width="115"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="2" Header="Генерация данных" 
                     Margin="20,10,0,10" Grid.Column="0" VerticalAlignment="Top" Width="340">
                <StackPanel Margin="6">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Диапазон значений:" Width="131"/>
                        <TextBox x:Name="RangeStartTextBox" Width="45" TextChanged="TextBox_TextChanged_1"/>
                        <Label Content="—" Margin="2,0"/>
                        <TextBox x:Name="RangeEndTextBox" Width="45" TextChanged="TextBox_TextChanged_1"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="2" Header="Импорт данных" 
                     Margin="20,10,0,10" Grid.Column="1" VerticalAlignment="Top" Width="292" Height="140">
                <StackPanel Margin="6">
                    <Button Content="Случайная генерация" Click="Button_Click" Margin="0,6,0,3"/>
                    <Button Content="Импорт из CSV" Click="Button_Click" Margin="0,3"/>
                    <Button Content="Импорт из Google Таблиц" Click="Button_Click" Margin="0,3,0,6"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="2" Header="Результат" 
                     Margin="20,10,20,10" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top">
                <TextBox x:Name="ResultTextBox" TextWrapping="Wrap" IsReadOnly="True" 
                        Background="White" BorderThickness="0" Margin="6" Height="120"/>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Точность" 
                     Margin="230,10,0,10" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="213">
                <StackPanel Orientation="Horizontal" Margin="6">
                    <Label Content="Точность (ε)" VerticalAlignment="Center"/>
                    <TextBox x:Name="PrecisionTextBox" Width="83" 
                            TextChanged="TextBox_TextChanged_1" Margin="10,0,0,0"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                       Margin="0,0,0,20" Orientation="Horizontal">
                <Button Content="Очистить все" Width="120" Click="Button_Click_2" Margin="0,0,20,0"/>
                <Button Content="Вычислить" Width="120" Click="Button_Click_1"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
