<Window x:Class="NumericalMethodsApp.LeastSquaresMethod.LeastSquaresMethodView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalMethodsApp.LeastSquaresMethod"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Метод наименьших квадратов" Height="650" Width="900"
        Background="White" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="TextAlignment" Value="Left"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center" 
                                             Margin="10,6"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF21618C"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <Setter Property="Foreground" Value="#FF888888"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFD0D7DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Справка" Click="Help_Click"/>
        </Menu>

        <Grid RenderTransformOrigin="0.5,0.433">
            <Grid.RowDefinitions>
                <RowDefinition Height="229"/>
                <RowDefinition Height="Auto" MinHeight="279.96"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.ColumnSpan="2" Margin="20,0,20,0" VerticalAlignment="Center" Height="220"
                   Background="#FFF8F9FA" CornerRadius="6">
                <oxy:PlotView x:Name="MainPlot" Background="Transparent" Margin="0"/>
            </Border>

            <GroupBox Grid.Row="1" Header="Множество точек" Margin="20,0,0,135" 
                     Grid.Column="0" HorizontalAlignment="Left" Width="224">
                <DataGrid x:Name="PointsDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" 
                          Margin="0,0,3,0" Height="127"
                          CellEditEnding="PointsDataGrid_CellEditEnding"
                          IsEnabled="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding Index}" IsReadOnly="True" Width="40"/>
                        <DataGridTextColumn Header="X" Binding="{Binding X, StringFormat=F2}" Width="80"/>
                        <DataGridTextColumn Header="Y" Binding="{Binding Y, StringFormat=F2}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Header="Размерность" 
                     Margin="256,0,0,136" HorizontalAlignment="Left" Width="174" Grid.Row="1">
                <StackPanel Margin="6,0,6,0" Height="74">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Значение n:" Width="80"/>
                        <TextBox x:Name="DimensionTextBox" Width="56"/>
                    </StackPanel>
                    <Button Content="Применить" Click="Button_Click_3"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Генерация данных" 
                     Margin="20,167,0,0" Grid.Column="0" VerticalAlignment="Top" Height="97">
                <StackPanel Margin="6,0,6,0" Height="28">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Label Content="Диапазон значений:" Width="131"/>
                        <TextBox x:Name="RangeStartTextBox" Width="65" TextChanged="TextBox_TextChanged_1"/>
                        <Label Content="—" Margin="2,0"/>
                        <TextBox x:Name="RangeEndTextBox" Width="65" TextChanged="TextBox_TextChanged_1"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Импорт данных" 
                     Margin="5,0,202,0" VerticalAlignment="Top" Height="161" Grid.Column="1">
                <StackPanel Margin="6">
                    <Button Content="Случайная генерация" Click="Button_Click" Margin="0,6,0,3"/>
                    <Button Content="Импорт из CSV" Click="Button_Click" Margin="0,3"/>
                    <Button Content="Импорт из Google Таблиц" Click="Button_Click" Margin="0,3,0,6"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Результат" 
                     Margin="238,0,20,0" Grid.Column="1" VerticalAlignment="Top" Height="264">
                <TextBox x:Name="ResultTextBox" TextWrapping="Wrap" IsReadOnly="True" 
                        Background="White" BorderThickness="0" Margin="6,0,6,0" Height="210"/>
            </GroupBox>

            <GroupBox Header="Точность" 
                     Margin="7,167,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="221" Grid.Row="1" Grid.Column="1" Height="97">
                <StackPanel Orientation="Horizontal" Margin="6,0,6,0" Height="53">
                    <Label Content="Значение ε:" VerticalAlignment="Center"/>
                    <TextBox x:Name="PrecisionTextBox" Width="83" 
                            TextChanged="TextBox_TextChanged_1" Margin="10,0,0,0"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" 
                       Margin="285,291,0,0" Orientation="Horizontal" Height="32" Width="310" Grid.RowSpan="2">
                <Button Content="Очистить все" Width="145" Click="Button_Click_2" Margin="0,0,20,0"/>
                <Button Content="Вычислить" Width="145" Click="Button_Click_1"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
