<!-- DichotomyMethod.xaml -->
<Window x:Class="NumericalMethodsApp.DichotomyMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Метод дихотомии" 
        Height="683" 
        Width="713"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                    Background="{TemplateBinding Background}"
                    BorderBrush="#FF999999"
                    BorderThickness="1"
                    CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFAAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="20">
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Справка" Click="HelpButton_Click" Background="White" Width="67"/>
            <MenuItem Header="Очистить все" Click="ClearAllButton_Click" Background="White"/>
        </Menu>

        <Grid Height="577">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <oxy:PlotView Grid.Row="0" 
                    x:Name="PlotView"
                    Margin="0,30,0,20"
                    IsManipulationEnabled="False" Grid.RowSpan="2"/>

            <StackPanel Grid.Row="1" 
                  x:Name="ResultsPanel" 
                  Margin="0,13,0,64" Grid.RowSpan="2">
                <TextBlock x:Name="ResultText" 
                   FontSize="14"
                   TextWrapping="Wrap"
                   Margin="0,10,0,5"
                   FontWeight="Bold"
                   Foreground="#FF0066CC"
                   Text="J" Height="20" Width="724"/>
            </StackPanel>

            <TextBlock Text="Введите значения для вычислений:"
                 FontSize="16"
                 FontWeight="Bold"
                 Margin="0,13,0,22" Grid.Row="2" Grid.RowSpan="2"/>

            <StackPanel Grid.Row="2" Margin="0,38,0,14" Grid.RowSpan="3">
                <TextBlock Text="Функция f(x):"/>
                <TextBox x:Name="TextBoxFunction"
                 FontSize="14"
                 Margin="0,0,0,5"
                 Width="450"
                 Height="30"
                 HorizontalAlignment="Left"
                 KeyDown="TextBox_KeyDown"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>
                <TextBlock Text="Примеры: sin(x), x*x + 2*x + 1, exp(x)" 
                   FontSize="12" 
                   Foreground="Gray"
                   Margin="0,-5,0,5"/>
                <TextBlock Text="Доступные функции: sin, cos, tan, exp, log, log10, sqrt, abs, pow(x,y)" 
                   FontSize="12" 
                   Foreground="Green"
                   Margin="0,0,0,10"
                   FontWeight="Bold"/>
            </StackPanel>

            <Grid Grid.Row="4" Margin="0,19,0,4" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Начало интервала (a):" Margin="0,0,20,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Конец интервала (b):" Margin="0,0,20,5"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Точность (ε):" Margin="0,0,0,5"/>

                <TextBox Grid.Row="1" Grid.Column="0" x:Name="TextBoxA"
                 Width="150" Height="30" Margin="0,0,20,0"
                 PreviewTextInput="NumberValidationTextBox"
                 KeyDown="TextBox_KeyDown"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>

                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TextBoxB"
                 Width="150" Height="30" Margin="0,0,20,0"
                 PreviewTextInput="NumberValidationTextBox"
                 KeyDown="TextBox_KeyDown"
                 PreviewKeyDown="TextBox_PreviewKeyDown"/>

                <TextBox Grid.Row="1" Grid.Column="2" x:Name="TextBoxEpsilon" 
                 Text="0.001" Height="30"
                 PreviewTextInput="NumberValidationTextBox"
                 KeyDown="TextBox_KeyDown"
                 PreviewKeyDown="TextBox_PreviewKeyDown" RenderTransformOrigin="0.513,0.704" Margin="3,0,-31,0"/>
            </Grid>

            <StackPanel Grid.Row="5" HorizontalAlignment="Center" Margin="0,39,0,-69">
                <Button x:Name="CalculateButton" 
                Content="Вычислить"
                Click="CalculateButton_Click"
                Width="200" Height="36"
                Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
