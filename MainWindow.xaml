<Window x:Class="NumericalMethodsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Численные методы" Height="580" Width="496"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Height="25" Background="{Binding Background, RelativeSource={RelativeSource AncestorType=Window}}">
            <MenuItem Header="О программе" Click="AboutMenuItem_Click"/>
        </Menu>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Численные методы" 
                FontSize="24"
                HorizontalAlignment="Left" Margin="130,0,0,20"/>

            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Calculator.png" Height="140" 
                       VerticalAlignment="Center" Margin="1,0,20,0"/>

                <TextBlock
                  TextWrapping="Wrap" 
                  FontSize="16" 
                  VerticalAlignment="Center"
                  TextAlignment="Justify"
                  Grid.Column="1">
          <Run Text="Добро пожаловать!" FontWeight="Bold"/><LineBreak/><LineBreak/>
          <Run Language="ru-ru" Text="Нажмите на кнопку с названием метода, чтобы запустить его работу."/>
                </TextBlock>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.Resources>
                    <Style TargetType="Button" x:Key="MethodButtonStyle">
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Margin" Value="10,8"/>
                        <Setter Property="Background" Value="#FFDDDDDD"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                          Background="{TemplateBinding Background}"
                          BorderBrush="#FF999999"
                          BorderThickness="1"
                          CornerRadius="8">
                                        <TextBlock x:Name="contentText"
                                      Text="{TemplateBinding Content}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      TextAlignment="Center"
                                      TextWrapping="Wrap"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFAAAAAA"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFEEEEEE"/>
                                <Setter Property="Foreground" Value="#FF888888"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>

                <StackPanel Grid.Column="0" Margin="10,0,5,0">
                    <Button Content="Метод дихотомии" 
                 Click="MethodButton_Click" Tag="Method1"
                 Style="{StaticResource MethodButtonStyle}" Name="Method1Button"/>
                    <Button Content="Метод золотого сечения" 
                 Click="MethodButton_Click" Tag="Method2"
                 Style="{StaticResource MethodButtonStyle}" Name="Method2Button"/>
                    <Button Content="Метод покоординатного спуска" 
                 Click="MethodButton_Click" Tag="Method3"
                 Style="{StaticResource MethodButtonStyle}" Name="Method3Button"/>
                    <Button Content="Олимпиадные сортировки" 
                 Click="MethodButton_Click" Tag="Method4"
                 Style="{StaticResource MethodButtonStyle}" Name="Method4Button"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5,0,10,0">
                    <Button Content="Решение СЛАУ" 
                 Click="MethodButton_Click" Tag="Method5"
                 Style="{StaticResource MethodButtonStyle}" Name="Method5Button"/>
                    <Button Content="Метод Ньютона" 
                 Click="MethodButton_Click" Tag="Method6"
                 Style="{StaticResource MethodButtonStyle}" Name="Method6Button"/>
                    <Button Content="Метод наименьших квадратов" 
                 Click="MethodButton_Click" Tag="Method7"
                 Style="{StaticResource MethodButtonStyle}" Name="Method7Button"/>
                    <Button Content="Решение определенного интеграла" 
                 Click="MethodButton_Click" Tag="Method8"
                 Style="{StaticResource MethodButtonStyle}" Name="Method8Button"/>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
