<Window x:Class="NumericalMethodsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Численные методы" Height="600" Width="496"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top" Height="25" Background="{Binding Background, RelativeSource={RelativeSource AncestorType=Window}}">
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Основное содержимое -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Text="Численные методы" 
                      FontSize="24"
                      HorizontalAlignment="Left" Margin="130,0,0,20"/>

            <!-- Логотип и текст -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Source="/6458450.png" Height="160" 
                       VerticalAlignment="Center" Margin="-11,0,20,0"/>

                <TextBlock
                          TextWrapping="Wrap" 
                          FontSize="16" 
                          VerticalAlignment="Center"
                          TextAlignment="Justify"
                          Text="Добро пожаловать!&#x0a;&#x0a;Данное приложение предназначено для демонстрации работы численных методов. Нажмите на кнопку метода, чтобы запустить его работу." Grid.Column="1"/>
            </Grid>

            <!-- Кнопки методов -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Стиль для скругленных кнопок -->
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="Margin" Value="10,8"/>
                        <Setter Property="Background" Value="#FFDDDDDD"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="#FF999999"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <!-- Левый столбец кнопок -->
                <StackPanel Grid.Column="0" Margin="10,0,5,0">
                    <Button Content="Метод 1" 
                           Click="MethodButton_Click" Tag="Method1"/>
                    <Button Content="Метод 2" 
                           Click="MethodButton_Click" Tag="Method2"/>
                    <Button Content="Метод 3" 
                           Click="MethodButton_Click" Tag="Method3"/>
                    <Button Content="Метод 4" 
                           Click="MethodButton_Click" Tag="Method4"/>
                </StackPanel>

                <!-- Правый столбец кнопок -->
                <StackPanel Grid.Column="1" Margin="5,0,10,0">
                    <Button Content="Метод 5" 
                           Click="MethodButton_Click" Tag="Method5"/>
                    <Button Content="Метод 6" 
                           Click="MethodButton_Click" Tag="Method6"/>
                    <Button Content="Метод 7" 
                           Click="MethodButton_Click" Tag="Method7"/>
                    <Button Content="Метод 8" 
                           Click="MethodButton_Click" Tag="Method8"/>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>