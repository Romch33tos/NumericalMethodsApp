<Window x:Class="NumericalMethodsApp.GoldenRatioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Метод золотого сечения" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>

        <oxy:PlotView HorizontalAlignment="Left" Margin="30,24,0,0" VerticalAlignment="Top" Height="213" Width="740" Grid.ColumnSpan="2"/>
        <Label Content="Введите функцию f(x):&#xD;&#xA;" HorizontalAlignment="Left" Margin="40,259,0,0" VerticalAlignment="Top" Height="25" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="106,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
        <Button Content="Вычислить" HorizontalAlignment="Left" Margin="238,359,0,0" VerticalAlignment="Top" Width="160" Click="Button_Click" RenderTransformOrigin="0.577,2.758" Grid.Column="1" Height="26"/>
        <Label Content="Введите значение границ интервала" HorizontalAlignment="Left" Margin="40,289,0,0" VerticalAlignment="Top" Height="25" Grid.ColumnSpan="2"/>
        <Label Content="А:" HorizontalAlignment="Left" Margin="44,311,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.098,0.464"/>
        <Label Content="В:" HorizontalAlignment="Left" Margin="45,342,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.873,-0.345"/>
        <TextBox HorizontalAlignment="Left" Margin="69,317,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="0,346,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
        <Label Content="Введите значение точности вычислений" HorizontalAlignment="Left" Margin="224,289,0,0" VerticalAlignment="Top" Height="25" Grid.Column="1"/>
        <Label Content="Е:" HorizontalAlignment="Left" Margin="229,317,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.464,-0.884" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="248,320,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="102" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
        <CheckBox Content="Найти минимум функции" HorizontalAlignment="Left" Margin="505,351,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Grid.Column="1"/>
        <Label Content="" HorizontalAlignment="Left" Margin="261,344,0,0" VerticalAlignment="Top" Height="25" Grid.Column="1"/>
        <CheckBox Content="Найти максимум функции" HorizontalAlignment="Left" Margin="505,320,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Grid.Column="1"/>
        <Label Content="Выберите режим работы" HorizontalAlignment="Left" Margin="491,289,0,0" VerticalAlignment="Top" Height="25" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Margin="35,217,0,0" TextWrapping="Wrap" Text="Ответ:" VerticalAlignment="Top" Width="740" Grid.ColumnSpan="2" TextChanged="TextBox_TextChanged_1" Height="37"/>

    </Grid>
</Window>
