<Window x:Class="NumericalMethodsApp.Views.NewtonMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Метод Ньютона" Height="685" Width="1000" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="White"
        x:Name="ThisWindow">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="12,8"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2980B9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF21618C"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFD0D7DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="4,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="0,0,0,-6">
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Справка" Click="Help_Click" Background="White" BorderBrush="White"/>
        </Menu>

        <Border Background="White" Margin="15" CornerRadius="8" 
                BorderThickness="1" BorderBrush="#FFEAECEE" Height="631">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="240"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="1" Grid.ColumnSpan="3" Height="220" Margin="8" 
                        BorderThickness="1" BorderBrush="#FFEAECEE" 
                        Background="#FFF8F9FA" CornerRadius="6">
                    <oxy:PlotView x:Name="PlotViewControl" Background="Transparent" Margin="5"/>
                </Border>

                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="8">
                    <Label Content="Функция f(x):" FontWeight="Bold" FontSize="13"/>
                    <TextBox x:Name="FunctionTextBox" 
                            Width="484" 
                            ToolTip="Введите математическую функцию, например: x^2 + 2*x + 1"
                            Text="{Binding FunctionExpression}"/>
                </StackPanel>

                <GroupBox Grid.Row="3" Grid.Column="0" Header="Параметры метода" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Начальная точка x₀:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="InitialPointTextBox" Grid.Row="0" Grid.Column="1" 
                                ToolTip="Начальное приближение для метода Ньютона"
                                Text="{Binding InitialPoint}"/>

                        <Label Content="Точность ε:" Grid.Row="1" Grid.Column="0"/>
                        <TextBox x:Name="EpsilonTextBox" Grid.Row="1" Grid.Column="1" 
                                ToolTip="Точность вычисления (например: 0.001)" 
                                Text="{Binding Epsilon}"/>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="1" Header="Интервал отображения" Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Начало (А):" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="DisplayStartTextBox" Grid.Row="0" Grid.Column="1" 
                                Text="{Binding DisplayIntervalStart}"/>

                        <Label Content="Конец (В):" Grid.Row="1" Grid.Column="0"/>
                        <TextBox x:Name="DisplayEndTextBox" Grid.Row="1" Grid.Column="1" 
                                Text="{Binding DisplayIntervalEnd}"/>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="3" Grid.Column="2" Header="Режим поиска" Margin="8">
                    <StackPanel>
                        <RadioButton Content="Найти максимум функции" x:Name="MaxRadioButton" 
                 Checked="RadioButton_Checked"
                 IsChecked="{Binding FindMaximum}"
                 GroupName="ExtremumType"/>
                        <RadioButton Content="Найти минимум функции" x:Name="MinRadioButton" 
                 Checked="RadioButton_Checked"
                 IsChecked="{Binding FindMinimum}"
                 GroupName="ExtremumType"/>
                    </StackPanel>
                </GroupBox>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="0,8,0,8">
                    <Button Content="Вычислить" Click="CalculateButton_Click" Width="140"
                           Background="#FF27AE60" FontSize="13" x:Name="CalculateFullButton"/>
                    <Button Content="Следующий шаг" Click="NextStepButton_Click" Width="140"
                           Background="#FF9B59B6" FontSize="13" x:Name="NextStepButton"/>
                    <Button Content="Очистить все" Click="ClearAllButton_Click" Width="140"
                           Background="#FF3498DB" FontSize="13" x:Name="ClearAllButton"/>
                </StackPanel>

                <Border Grid.Row="5" Grid.ColumnSpan="3" 
                        BorderThickness="1" BorderBrush="#FFD0D7DE" 
                        Background="#FFF8F9FA" CornerRadius="6" 
                        Margin="8" Height="80">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Результат:" Grid.Row="0" 
                               FontWeight="Bold" FontSize="13" 
                               Foreground="#FF2C3E50" Margin="8,4,8,0"/>

                        <TextBox x:Name="ResultTextBox" Grid.Row="1"
                                Style="{StaticResource ResultTextBoxStyle}" 
                                Height="50" Margin="8,0,8,8"
                                Text="{Binding ResultText}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </DockPanel>
</Window>
