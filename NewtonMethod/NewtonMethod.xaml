<Window x:Class="NumericalMethodsApp.Views.NewtonMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:NumericalMethodsApp.Views"
        Title="Метод Ньютона" Height="720" Width="1000" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="White"
        x:Name="ThisWindow">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,2"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="6,2"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="6,2"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFD0D7DE"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Margin" Value="6"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="3,4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ResultTextBoxStyle" TargetType="TextBox">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <Style x:Key="StepButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="3,1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF7F8C8D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF34495E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFBDC3C7"/>
                    <Setter Property="Foreground" Value="#FF7F8C8D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel Margin="0">
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="Справка" Click="Help_Click" Background="White" BorderBrush="White"/>
        </Menu>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Background="White" Margin="12" CornerRadius="8" 
                    BorderThickness="1" BorderBrush="#FFEAECEE" Height="630">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="220"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="1" Grid.ColumnSpan="3" Height="210" Margin="6" 
                            BorderThickness="1" BorderBrush="#FFEAECEE" 
                            Background="#FFF8F9FA" CornerRadius="6">
                        <oxy:PlotView x:Name="PlotViewControl" Background="Transparent" Margin="4"/>
                    </Border>

                    <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="6">
                        <Label Content="Функция f(x):" FontWeight="Bold" FontSize="13"/>
                        <TextBox x:Name="FunctionTextBox" 
                                Width="480" 
                                ToolTip="Введите математическую функцию, например: x^2 + 2*x + 1"
                                Text="{Binding FunctionExpression, ElementName=ThisWindow}"/>
                    </StackPanel>

                    <GroupBox Grid.Row="3" Grid.Column="0" Header="Введите границы интервала" Margin="6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Начало (А):" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="TextBoxA" Grid.Row="0" Grid.Column="1" 
                                    ToolTip="Нижняя граница интервала"
                                    Text="{Binding LowerBound, ElementName=ThisWindow}"/>

                            <Label Content="Конец (В):" Grid.Row="1" Grid.Column="0"/>
                            <TextBox x:Name="TextBoxB" Grid.Row="1" Grid.Column="1" 
                                    ToolTip="Верхняя граница интервала"
                                    Text="{Binding UpperBound, ElementName=ThisWindow}"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="3" Grid.Column="1" Header="Укажите точность вычислений" Margin="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Значение ε:"/>
                            <TextBox x:Name="EpsilonTextBox" Grid.Column="1" 
                                    ToolTip="Точность вычисления (например: 0.001)" 
                                    Text="{Binding Epsilon, ElementName=ThisWindow}"/>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="3" Grid.Column="2" Header="Выберите режим работы" Margin="6">
                        <StackPanel>
                            <RadioButton Content="Найти минимум функции" x:Name="MinRadioButton" 
                     Checked="RadioButton_Checked"
                     IsChecked="{Binding FindMinimum, ElementName=ThisWindow}"
                     Margin="2,3"
                     GroupName="ExtremumType"/>
                            <RadioButton Content="Найти максимум функции" x:Name="MaxRadioButton" 
                     Checked="RadioButton_Checked"
                     IsChecked="{Binding FindMaximum, ElementName=ThisWindow}"
                     Margin="2,3"
                     GroupName="ExtremumType"/>
                        </StackPanel>
                    </GroupBox>

                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" 
                               HorizontalAlignment="Center" Margin="0,6,0,6">
                        <Button Content="Вычислить" Click="CalculateButton_Click" Width="136" 
                               Background="#FF27AE60" FontSize="13">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" 
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center" 
                                                         Margin="10,6"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Очистить все" Click="ClearAllButton_Click" Width="135" 
                               Background="#FF3498DB" FontSize="13">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="6" 
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center" 
                                                         Margin="10,6"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <GroupBox Grid.Row="4" Grid.Column="2" Header="Пошаговый просмотр" Margin="6">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="StepBackButton" Content="←" Style="{StaticResource StepButtonStyle}"
                                    Click="StepBackButton_Click" ToolTip="Предыдущий шаг"/>
                            <Label x:Name="StepInfoLabel" Content="Шаг: 0/0" VerticalAlignment="Center" 
                                   Margin="6,0" FontWeight="SemiBold" Foreground="#FF2C3E50"/>
                            <Button x:Name="StepForwardButton" Content="→" Style="{StaticResource StepButtonStyle}"
                                    Click="StepForwardButton_Click" ToolTip="Следующий шаг"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="5" Grid.ColumnSpan="3" Header="Результат" Margin="6,0,6,0" Grid.RowSpan="2">
                        <TextBox x:Name="ResultTextBox" 
                                Style="{StaticResource ResultTextBoxStyle}"
                                Text="{Binding ResultText, ElementName=ThisWindow}" Height="90"/>
                    </GroupBox>
                </Grid>
            </Border>
        </ScrollViewer>
    </DockPanel>
</Window>
